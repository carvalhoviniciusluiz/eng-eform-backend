{
  "name": "eng-eform-backend",
  "version": "0.0.1",
  "description": "This is our API",
  "author": "Carvalho, Vinicius Luiz <carvalho.viniciusluiz@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npx prisma generate && npx @nestjs/cli build",
    "build:compile": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:docker": "nest start --debug='0.0.0.0:9229'",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=1 --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:ci": "jest --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:staged": "yarn test --bail --findRelatedTests",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "jest:clear": "jest --clearCache",
    "update:packages": "yarn ncu -u",
    "prisma": "prisma",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:db:migrate": "prisma migrate dev --name",
    "prisma:db:push": "prisma db push",
    "prisma:db:seed": "prisma db seed"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn format\" \"yarn lint\" \"yarn test:staged\" \"yarn tsc --noEmit\"",
      "post-merge": "yarn",
      "pre-push": "yarn test:ci"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@prisma/client": "^3.14.0",
    "@types/faker": "5.5.9",
    "bcryptjs": "^2.4.3",
    "build": "^0.1.4",
    "cache-manager": "^4.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express-rate-limit": "^6.4.0",
    "faker": "5.5.3",
    "helmet": "^5.1.0",
    "nest": "^0.1.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "prisma": "^3.15.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.4.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.7",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/cache-manager": "^4.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-extended": "^2.0.0",
    "npm-check-updates": "^14.0.2",
    "prettier": "^2.7.1",
    "prisma-dbml-generator": "^0.9.1",
    "prisma-erd-generator": "^0.11.4",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "maxConcurrency": 1,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!<rootDir>/*.ts",
      "!<rootDir>/**/index.ts",
      "!<rootDir>/**/*.module.ts",
      "!<rootDir>/config/**/*",
      "!<rootDir>/common/**/*",
      "!<rootDir>/auth/strategies/**/*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/$1"
    }
  }
}
