{
  "name": "eng-eform-backend",
  "version": "0.0.1",
  "description": "This is our API",
  "author": "Carvalho, Vinicius Luiz <carvalho.viniciusluiz@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npx prisma generate && npx @nestjs/cli build",
    "build:compile": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:docker": "nest start --debug='0.0.0.0:9229'",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=1 --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:ci": "jest --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:staged": "yarn test --bail --findRelatedTests",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "jest:clear": "jest --clearCache",
    "prisma": "prisma",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:db:migrate": "prisma migrate dev --name",
    "prisma:db:push": "prisma db push",
    "prisma:db:seed": "prisma db seed",
    "up:packs": "yarn ncu -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn format\" \"yarn lint\" \"yarn test:staged\" \"yarn tsc --noEmit\"",
      "post-merge": "yarn",
      "pre-push": "yarn test:ci"
    }
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@prisma/client": "^4.8.0",
    "@types/faker": "5.5.9",
    "bcryptjs": "^2.4.3",
    "build": "^0.1.4",
    "cache-manager": "^5.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express-rate-limit": "^6.7.0",
    "faker": "5.5.3",
    "helmet": "^6.0.1",
    "nest": "^0.1.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "prisma": "^4.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.6.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cache-manager": "^4.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.1",
    "prisma-dbml-generator": "^0.10.0",
    "prisma-erd-generator": "^1.2.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "maxConcurrency": 1,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!<rootDir>/*.ts",
      "!<rootDir>/**/index.ts",
      "!<rootDir>/**/*.module.ts",
      "!<rootDir>/config/**/*",
      "!<rootDir>/common/**/*",
      "!<rootDir>/auth/strategies/**/*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/$1"
    }
  }
}
